<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/idiomlistitem"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/inner"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10.0dip"
        android:background="@drawable/squarerect"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@id/t"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/idiomnamebg"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/idiomname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@id/imageView1"
                android:gravity="left|center"
                android:maxLines="4"
                android:paddingBottom="5.0dip"
                android:paddingLeft="10.0dip"
                android:paddingRight="5.0dip"
                android:paddingTop="5.0dip"
                android:text="Idiom Name"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#ffffffff"
                android:textSize="16.0sp"
                android:textStyle="bold|italic"
                android:typeface="serif" />



            <ImageView
                android:id="@id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="false"
                android:layout_centerVertical="true"
                android:layout_marginRight="5.0dip"
                android:adjustViewBounds="true"
                android:maxHeight="20.0dip"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@id/idiommeaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10.0dip"
            android:text="- the subject of reason for a fight or dispute"
            android:textAppearance="?android:textAppearanceSmall" />
    </LinearLayout>

</LinearLayout>