<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addidiomparent"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/mainbg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/addidiomedit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:ems="10"
            android:hint="Idiom" >

            <requestFocus />
        </EditText>
        <EditText
            android:id="@+id/addidiommeaningedit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:ems="10"
            android:hint="Meaning" >

        </EditText>
        <EditText
            android:id="@+id/addidiomexampleedit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:ems="10"
            android:hint="Example" >

        </EditText>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/addidiomcancelbutton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:text="Cancel" />

            <Button
                android:id="@+id/addidiomsavebutton"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:text="Save" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>